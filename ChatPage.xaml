<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DalamudControlApp.ChatPage"
             BackgroundColor="Black">
    
    <Grid Padding="10">
        <!-- Chat Message List -->
        <CollectionView ItemsSource="{Binding ChatMessages}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="5" BackgroundColor="Black" CornerRadius="10">
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="[" TextColor="Gray"/>
                                    <Span Text="{Binding Timestamp}" TextColor="Gray"/>
                                    <Span Text="] [" TextColor="Gray"/>
                                    <Span Text="{Binding Type}" TextColor="DodgerBlue"/>
                                    <Span Text="] " TextColor="Gray"/>
                                    <Span Text="{Binding Sender}" TextColor="LightGreen" FontAttributes="Bold"/>
                                    <Span Text=": " TextColor="White"/>
                                    <Span Text="{Binding Message}" TextColor="White"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
